    # fi
fi

# Windows Git bash
if [[ $os_type == *"MINGW"* ]]; then
    echo "Windows git bash" > /dev/null
fi

# common stuff
if [ -f ~/hhighlighter/h.sh ]; then
    source ~/hhighlighter/h.sh
else
    echo "hhighlighter is not installed"
    echo "try to install it from github"
fi


