# set custome bash prompt
PS1='\[`[ $? = 0 ] && X=2 || X=1; tput setaf $X`\][\d \t:\u@\h]\n\[`tput sgr0`\][$PWD]\n-> '

export LSCOLORS=gxfxbEaEBxxEhEhBaDaCaD

# global alias
alias l='ls -lp'
alias ll='ls -lahp'
alias lr='ls -lahprt' 
alias h='history'
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'

# project alias
alias youilabs='cd /Users/haochen/youilabs'
alias eclipse='cd /Users/haochen/youilabs/RogersEclipse'
alias uswish='cd /Users/haochen/youilabs/RogersEclipse/uswish'
alias iosh='cd build/ios-handset'
alias iost='cd build/ios-tablet'
alias ctagdb='ctags -R --c++-kinds=+p --fields=+iaS --extra=+q --language-force=c++ .'
alias cscopedb='ack -f --cpp >| cscope.files && cscope -b -q -k'

# git alias
alias gittree=''

# for MACOSX
if [ -f /usr/local/opt/bash-git-prompt/share/gitprompt.sh ]; then
    GIT_PROMPT_ONLY_IN_REPO=1
    source /usr/local/opt/bash-git-prompt/share/gitprompt.sh
fi

if [ -f ~/.git-completion.bash ]; then
    . ~/.git-completion.bash
fi

# pipe and highlight
if [ -f /Users/haochen/hhighlighter/ph.sh ]; then
    source /Users/haochen/hhighlighter/ph.sh
fi

# for ARCH linux
if [ -f /usr/share/git/completion/git-completion.bash ]; then
    source /usr/share/git/completion/git-completion.bash
fi

if [ -f /usr/share/git/completion/git-prompt.sh ]; then
    source /usr/share/git/completion/git-prompt.sh
    GIT_PS1_SHOWDIRTYSTATE=1
    GIT_PS1_SHOWSTASHSTATE=1
    GIT_PS1_SHOWUNTRACKEDFILES=1
    GIT_PS1_SHOWUPSTREAM=1
    PS1='[\u@\h \W$(__git_ps1 " (%s)")]\$ '
fi
